<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome"
    >

    <TextView
        android:id="@+id/jelajah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Jelajahi\nWarisan\nBudaya "
        android:textColor="#F29F05"
        android:textSize="22sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="cari tempat yang kamu mau!\nmulai pantai, gunung, museum,\nsampai cagar budaya "
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_below="@id/jelajah"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="900px"
        android:layout_height="600px"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        />
<!--    <com.chabbal.slidingdotsplash.SlidingSplashView-->
<!--        android:id="@+id/splash"-->
<!--            android:layout_width="900px"-->
<!--            android:layout_height="600px"-->
<!--            android:layout_marginTop="250dp"-->
<!--            android:layout_centerHorizontal="true"-->
<!--        app:imageResources="@array/img_id_arr"/>-->

    <Button
        android:id="@+id/masuk"
        android:layout_width="212px"
        android:layout_height="60px"
        android:layout_marginTop="1500px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/masukbutton"/>

    <Button
        android:id="@+id/daftar"
        android:layout_width="212px"
        android:layout_height="60px"
        android:layout_marginTop="1600px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/daftarbutton"/>

</RelativeLayout>


